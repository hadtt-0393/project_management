<%= form_with url: release_plans_path, method: :get, class: "row g-4 pb-4" do |f| %>
  <div class="col-auto">
    <%= f.label :date_from,  t(".release_date_from"), class: "form-label" %>
    <%= f.date_field :date_from, value: params[:date_from], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :date_to,  t(".release_date_to"), class: "form-label" %>
    <%= f.date_field :date_to, value: params[:date_to], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :name,  t(".name"), class: "form-label" %>
    <%= f.text_field :name, value: params[:name], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :status, t(".status"), class: "form-label" %>
    <%= f.select :status, list_status, {include_blank: true, selected: params[:status]}, class: "form-select" %>
  </div>
  <div class="col-auto w-175px">
    <label class="form-label invisible">invisible label</label>
    <%= f.submit t(".search"), name: nil, class: "btn btn-primary form-control" %>
  </div>
  <div class="col-auto w-90px m-0">
    <label class="form-label invisible">invisible label</label>
    <%= link_to release_plans_path, class: "btn btn-secondary form-control" do %>
      <i class="bi bi-arrow-counterclockwise"></i>
    <% end %>
  </div>
<% end %>
