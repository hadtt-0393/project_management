<%= form_with url: lesson_learns_path, method: :get, class: "row g-4 pb-4" do |f| %>
  <div class="col-auto">
    <%= f.label :lesson_category_id, t(".lesson_category"), class: "form-label" %>
    <%= f.select :lesson_category_id, list_lesson_learn_categories, {include_blank: true, selected: params[:lesson_category_id]}, {class: "form-select"} %>
  </div>

  <div class="col-auto">
    <%= f.label :start_date, t("project.form.start_date"), class: "form-label" %>
    <%= f.date_field :start_date, value: date_field_value(params[:start_date]), class: "form-control" %>
  </div>

  <div class="col-auto">
    <%= f.label :end_date, t("project.form.end_date"), class: "form-label" %>
    <%= f.date_field :end_date, value: date_field_value(params[:end_date]), class: "form-control" %>
  </div>

  <div class="col-auto">
    <%= f.label :creator_id, t("lesson_learns.index.creator"), class: "form-label" %>
    <%= f.select :creator_id, list_users, {include_blank: true, selected: params[:creator_id]}, {class: "form-select"} %>
  </div>

  <div class="col-auto w-140px">
    <label class="form-label invisible">invisible label</label>
    <%= f.submit t("projects.search_form.search"), name: nil, class: "btn btn-primary form-control"%>
  </div>
  <div class="col-auto w-90px m-0">
    <label class="form-label invisible overflow-hidden m-0">invisible label</label>
    <%= link_to lesson_learns_path, class: "btn btn-secondary form-control" do %>
      <i class="bi bi-arrow-counterclockwise"></i>
    <% end %>
  </div>
<% end %>
